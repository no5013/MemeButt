<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.memebutt.MainActivity">
    
    <TextView
        android:id="@+id/memeTitle"
        android:text="TITLE"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
       android:id="@+id/memePicture"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:text="PRESS"
        android:id="@+id/pressButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/meme_recycle_view"
        android:background="#000000"
        ></LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@id/meme_recycle_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
